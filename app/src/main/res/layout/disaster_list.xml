<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="8dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/disaster_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingBottom="10dp"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/disaster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disaster_name"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/disaster_image"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"/>
            <TextView
                android:id="@+id/disaster_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="?android:textColorSecondary"
                android:layout_below="@id/disaster_name"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginTop="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:drawableStart="@drawable/location"
                android:drawableLeft="@drawable/location" />
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/disaster_location"
                android:background="#808080"/>
            <TextView
                android:id="@+id/disaster_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disaster_description"
                android:textColor="#213240"
                android:layout_below="@id/divider"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginTop="3dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:textStyle="italic"/>

        </RelativeLayout>


</androidx.cardview.widget.CardView>